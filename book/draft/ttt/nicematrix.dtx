% \begin{BVerbatim}[baseline=c,boxwidth=11cm]
% \NiceMatrixOptions{nullify-dots}
% $\begin{pNiceMatrix}[rules/color=gray,~emphase#hvlines@,margin]
% 0      & \Cdots &  &   &        & 0      \\
